{
	"name": "graphql-server-template",
	"version": "1.0.0",
	"description": "App that lists SpaceX Launch Missions",
	"main": "server.js",
	"scripts": {
		"start": "babel-node server.js",
		"test": "jest",
		"dev": "nodemon --exec babel-node server.js",
		"lint": "./node_modules/.bin/eslint --ext js,jsx --max-warnings 0 .",
		"dev:local": "concurrently \" npm run start\" \"cd ./client  && npm run start \" "
	},
	"repository": {
		"type": "git"
	},
	"nodemonConfig": {
		"ignore": [ "test/*" ],
		"ext": "js,json,graphql"
	},
	"author": "Jean Altidor",
	"license": "ISC",
	"dependencies": {
		"apollo-datasource-rest": "^0.7.0",
		"apollo-server": "^2.5.0",
		"axios": "^0.18.0",
		"concurrently": "^5.0.0",
		"cookie-parser": "^1.4.4",
		"cors": "^2.8.5",
		"dayjs": "^1.8.15",
		"express": "^4.16.4",
		"express-graphql": "^0.7.1",
		"graphql": "^14.3.0",
		"graphql-tools": "^4.0.4",
		"jest": "^25.1.0",
		"log4js": "^4.2.0",
		"merge-graphql-schemas": "^1.5.8",
		"nyc": "^14.1.1",
		"request": "^2.88.0",
		"sequelize": "^5.15.1",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.4",
		"@babel/node": "^7.8.4",
		"@babel/plugin-proposal-class-properties": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.8.3",
		"@babel/preset-env": "^7.8.4",
		"@babel/runtime": "^7.8.4",
		"eslint": "^6.2.1",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-prettier": "^6.1.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.14.3",
		"eslint-plugin-react-hooks": "^1.7.0",
		"husky": "^3.0.4",
		"lint-staged": "^9.2.3",
		"nodemon": "^1.19.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src /**/*.{js,jsx}": [ "eslint", "pretty-quick â€” staged", "git add" ]
	},
	"jest": {
		"testPathIgnorePatterns": [ "/node_modules/", "/__utils", "/client" ]
	}
}
